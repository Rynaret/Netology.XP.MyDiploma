@model ShopService.Entities.Product

@using (Html.BeginForm("RemoveFromSubscription", "Products", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
    <div class="col-xs-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">@Model.Name</h3>
            </div>
            <div class="panel-body">
                <span>Цена: @Model.Price $</span>
                <button type="submit" class="btn btn-danger pull-right">
                    <span class="glyphicon glyphicon-remove"></span> Удалить из подписки
                </button>
            </div>
        </div>
    </div>
}